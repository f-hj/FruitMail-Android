        android:shortcutId="compose"
        android:enabled="true"
        android:icon="@drawable/ic_create_black_24dp"
        android:shortcutShortLabel="@string/compose"
        android:shortcutLongLabel="@string/compose_long"
        android:shortcutDisabledMessage="@string/compose_disabled">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="fr.fruitice.mail"
            android:targetClass="fr.fruitice.mail.WriteMailActivity" />
        <!-- If your shortcut is associated with multiple intents, include them
             here. The last intent in the list determines what the user sees when
             they launch this shortcut. -->
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
    <!-- Specify more shortcuts here. -->
</shortcuts>
